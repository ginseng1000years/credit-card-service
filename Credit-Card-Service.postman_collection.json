{
  "info": {
    "name": "Credit Card Service",
    "description": "API collection for Credit Card Service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Cards",
      "item": [
        {
          "name": "Get Card Summary",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "pm.test(\"Response has required fields\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('cardId');",
                  "    pm.expect(jsonData).to.have.property('cardNumber');",
                  "    pm.expect(jsonData).to.have.property('creditLimit');",
                  "    pm.expect(jsonData).to.have.property('availableLimit');",
                  "    pm.expect(jsonData).to.have.property('totalCapturedAmount');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/cards/1/summary",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "cards",
                "1",
                "summary"
              ]
            },
            "description": "Get a summary of a credit card including available limit and total captured amount"
          },
          "response": [
            {
              "name": "Success",
              "originalRequest": {
                "method": "GET",
                "header": [],
                "url": {
                  "raw": "{{baseUrl}}/cards/1/summary",
                  "host": [
                    "{{baseUrl}}"
                  ],
                  "path": [
                    "cards",
                    "1",
                    "summary"
                  ]
                }
              },
              "status": "OK",
              "code": 200,
              "body": "{\n  \"cardId\": 1,\n  \"cardNumber\": \"4532015112830366\",\n  \"creditLimit\": 10000.00,\n  \"availableLimit\": 10000.00,\n  \"totalCapturedAmount\": 0.00\n}"
            }
          ]
        }
      ]
    },
    {
      "name": "Transactions",
      "item": [
        {
          "name": "Authorize Transaction",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "pm.test(\"Response has required fields\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('transactionId');",
                  "    pm.expect(jsonData).to.have.property('cardId');",
                  "    pm.expect(jsonData).to.have.property('amount');",
                  "    pm.expect(jsonData).to.have.property('type');",
                  "    pm.expect(jsonData).to.have.property('createdAt');",
                  "});",
                  "pm.test(\"Transaction type is AUTHORIZED\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.type).to.equal('AUTHORIZED');",
                  "});",
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set(\"transactionId\", jsonData.transactionId);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cardId\": 1,\n  \"amount\": 100.00\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/transactions/authorize",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "transactions",
                "authorize"
              ]
            },
            "description": "Authorize a transaction on a credit card. This creates a transaction in AUTHORIZED state."
          },
          "response": [
            {
              "name": "Success",
              "originalRequest": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"cardId\": 1,\n  \"amount\": 100.00\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/transactions/authorize",
                  "host": [
                    "{{baseUrl}}"
                  ],
                  "path": [
                    "transactions",
                    "authorize"
                  ]
                }
              },
              "status": "Created",
              "code": 201,
              "body": "{\n  \"transactionId\": 1,\n  \"cardId\": 1,\n  \"amount\": 100.00,\n  \"type\": \"AUTHORIZED\",\n  \"createdAt\": \"2026-02-05T20:10:30.123456\"\n}"
            }
          ]
        },
        {
          "name": "Capture Transaction",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "pm.test(\"Response has required fields\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('transactionId');",
                  "    pm.expect(jsonData).to.have.property('cardId');",
                  "    pm.expect(jsonData).to.have.property('amount');",
                  "    pm.expect(jsonData).to.have.property('type');",
                  "    pm.expect(jsonData).to.have.property('createdAt');",
                  "});",
                  "pm.test(\"Transaction type is CAPTURED\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.type).to.equal('CAPTURED');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/transactions/capture/{{transactionId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "transactions",
                "capture",
                "{{transactionId}}"
              ]
            },
            "description": "Capture a previously authorized transaction. The transaction must be in AUTHORIZED state."
          },
          "response": [
            {
              "name": "Success",
              "originalRequest": {
                "method": "POST",
                "header": [],
                "url": {
                  "raw": "{{baseUrl}}/transactions/capture/1",
                  "host": [
                    "{{baseUrl}}"
                  ],
                  "path": [
                    "transactions",
                    "capture",
                    "1"
                  ]
                }
              },
              "status": "OK",
              "code": 200,
              "body": "{\n  \"transactionId\": 1,\n  \"cardId\": 1,\n  \"amount\": 100.00,\n  \"type\": \"CAPTURED\",\n  \"createdAt\": \"2026-02-05T20:10:30.123456\"\n}"
            }
          ]
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "transactionId",
      "value": "",
      "type": "string"
    }
  ]
}
